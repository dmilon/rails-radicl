
<div class="container map">

  <div class="wrapper">
    <br><br>
    <h1 class="how text-center">be part your community</h1>
    <br>
    <%= form_tag community_gardens_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a farm, build your community"
      %>
    <% end %>
</div>

  <div class="cardswithmap wrapper">
    <div class="row">
    <div class="col-xs-12 col-md-6">
    <div
      id="map"
      style="width: 100%; height: 100vh;
     margin: 0 auto; margin-bottom: 80px"
      data-markers="<%= @markers.to_json %>">
    </div>
    </div>


    <div class="col-xs-12 col-md-6">
    <div class="row ">
  <% @gardens.each do |garden| %>
    <div class="col-xs-12 col-sm-6">
      <div class="card">
        <%= cl_image_tag garden.photo, class: "card-img-top" %>
        <% @garden_id = garden.id %>
        <% @user_id = current_user.id %>
        <%= link_to follows_path(garden_id: @garden_id, user_id: @user_id), method: :post, class: 'icon' do %>
          <i class="fas fa-seedling"></i>
        <% end %>
         <!--  <a href="#" class="icon"><i class="fas fa-seedling"></i></a> -->
          <div class="overlay">
            <div class="text">
              <h2><%= garden.name %></h2>
              <p><%= garden.address %></p>
            </div>
          </div>

        <%= link_to garden_path(garden) do %>
        </div>
          <div class="card-link">
            <p>show</p>
          </div>
        <% end %>
    </div>
<% end %>
</div>
</div>
    </div>


  </div>

</div>


