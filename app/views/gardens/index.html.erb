
<div class="container">
  #this is the search bar
  <div class="wrapper">
    <br>
    <h1 class="how">be part of the community</h1>
    <br>
    <%= form_tag community_gardens_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a garden"
      %>
    <% end %>
  </div>
  <div class="cardswithmap">
    <div class="wrapper-2">
    <h1 class="how text-center">join the community, discover our greatest farms</h1>
    <br>
      <div class="row ">
        <% @gardens.each do |garden| %>
          <div class="col-xs-12 col-sm-3">
            <div class="card">
              <%#= cl_image_tag garden.photo, class: "card-img-top" %>
                <a href="#" class="icon"><i class="fas fa-seedling"></i></a>
                <div class="overlay">
                  <div class="text">
                    <h2><%= garden.name %></h2>
                    <p><%= garden.address %></p>
                  </div>
                </div>
              </div>
              <%= link_to garden_path(garden) do %>
                <div class="card-link">
                  <p>follow</p>
                </div>
              <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>">
    </div>
  </div>
</div>


