<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.12), rgba(0,0,0,0.11)), url(https://images.unsplash.com/photo-1431631927486-6603c868ce5e?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=31cfb792a10418a51f4a1e609e089a06&auto=format&fit=crop&w=1950&q=80); background-size: cover!important;">
  <div class="form">
    <div class="row">
      <h1>add a new farm</h1>
        <%= simple_form_for(@garden) do |f| %>
          <%= f.input :address, input_html: { id: 'garden_address'} %>
          <%= f.input :name %>
          <%= f.input :area %>
          <%= f.input :photo %>
          <%= f.submit "add a farm", class:"btn btn-home btn-lg"%>
        <% end %>
    </div>
  </div>
</div>

