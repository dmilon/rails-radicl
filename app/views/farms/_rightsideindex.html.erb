<div id="map-markers" data-markers="<%= markers.to_json %>">
  <% gardens.each do |garden| %>
    <% unless garden == current_user.garden %>
      <div class="col-xs-12 col-sm-6">
        <div class="card">
          <%= cl_image_tag garden.photo, class: "card-img-top" %>
          <%= link_to follows_path(garden_id: garden.id), method: :post, remote: true, class: "icon" do %>
            <i class="fas fa-heart <%= "followed" if current_user.follow?(garden) %>" ></i>
          <% end %>
           <!--  <a href="#" class="icon"><i class="fas fa-seedling"></i></a> -->
          <%= link_to garden_path(garden) do %>
            <div class="overlay">
              <%= cl_image_tag garden.users[0].avatar, class: "avatar card-avatar" %>
              <div class="text">
                <h2><%= garden.name %></h2>
                <p><%= garden.address %></p>
              </div>
            </div>
            <div class="card-link">
              <p>d√©couvrir</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
