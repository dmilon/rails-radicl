<%= render 'shared/banner' %>

<div class="container">
  <div class="wrapper animated anim-scroll">
    <h1 class="how text-center">how does it work?</h1>
    <div class="row">
      <br><br><br>
      <%= link_to new_garden_path do %>
        <div class="col-xs-12 col-sm-3">
          <div class="card-icon">
            <img src="https://res.cloudinary.com/bdmbdm/image/upload/v1527671032/farm.svg" alt="">
          </div>
          <p class="text-center">create your farm</p>
        </div>
      <% end %>
      <div class="col-xs-12 col-sm-3">
        <div class="card-icon">
          <img src="https://res.cloudinary.com/bdmbdm/image/upload/v1527697260/circles2.svg" alt="">
        </div>
        <p class="text-center">add your zones</p>
      </div>
      <div class="col-xs-12 col-sm-3">
        <div class="card-icon">
          <img src="https://res.cloudinary.com/bdmbdm/image/upload/v1527671027/watering.svg" alt="">
        </div>
        <p class="text-center">log your actions</p>
      </div>
      <div class="col-xs-12 col-sm-3">
        <div class="card-icon">
          <img src="http://res.cloudinary.com/bdmbdm/image/upload/v1527697464/share.svg" alt="">
        </div>
        <p class="text-center">share & learn</p>
      </div>
    </div>
  </div>
</div>
<div class="wrapper-2 animated anim-scroll">
  <h1 class="how text-center">get inspired, explore our greatest farms</h1>
  <br>
  <div class="row">
    <% @gardens.each do |garden| %>
      <div class="col-xs-12 col-sm-3">
        <div class="card">
          <%= cl_image_tag garden.photo, class: "card-img-top" %>
          <% if user_signed_in? %>
            <% follow = current_user.follow?(garden) %>
            <%= link_to follows_path(garden_id: garden.id), method: :post, class: "icon" do %>
              <i class="fas fa-heart <%= "followed" if follow %>" ></i>
            <% end %>
          <% end %>
          <%= link_to garden_path(garden) do %>
            <div class="overlay">
              <div class="text">
                <h2><%= garden.name %></h2>
                <p><%= garden.address %></p>
              </div>
            </div>
            <div class="card-link">
              <p>discover</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <div class="text-center"> <%= link_to "join the community", community_gardens_path, class: "btn btn-home btn-lg text-center green-button animated zoomIn" %></div>
</div>
