<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.12), rgba(0,0,0,0.11)), url(https://images.unsplash.com/photo-1500651230702-0e2d8a49d4ad?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=bfcaecd3f907b444b43692e25ff77302); background-size: cover!important">

<div class="form">
  <div class="row">
      <h1>add an element to <%= @zone.name.downcase %></h1>
      <br>
      <%= simple_form_for [@zone, @element] do |f| %>
        <%= f.input :name, required: true %>
        <%= f.input :quantity, as: :integer, required: true %>
        <%= f.input :photo, required: false %>
        <br>
        <%= f.submit "add an element", class: "btn btn-home btn-lg" %>
      <% end %>
  </div>
</div>

</div>
